<%= form_for(@event, :remote=>true) do |f| %>
    <p>
      <%=  f.label :name %>
      <%=  f.text_field :name %>
    </p>
    <p>
      <%=  f.label :start_date %>
      <%=  f.text_field :start_date %>
    </p>
    <p>
      <%=  f.label :start_time %>
      <%=  f.text_field :start_time %>
    </p>
    <p>
      <%=  f.label :end_date %>
      <%=  f.text_field :end_date%>
    </p>
    <p>
      <%=  f.label :end_time %>
      <%=  f.text_field :end_time%>
    </p>
    <p>
      <%=  f.label :description %>
      <%=  f.text_area :description %>
    </p>
    <%= f.hidden_field :coursem_id, :value => @coursem.id %>
    <p><%=  f.submit :id=>"event_submit" %></p>
<% end %>